@model Product

<h2>Add product</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name:</label></br>
        <input type="text" name="Name" />
    </div>

    <div>
        <label>Description:</label></br>
        <input type="text" name="Description" />
    </div>

    <div>
        <label>Price:</label></br>
        <input type="number" name="Price" />
    </div>

    <button type="submit">Add</button>
</form>
